<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <h1>Url Shortener</h1>
    <%  if (locals.id) { %>
        <p>Url Genereat : http://localhost:8001/url/<%= id %></p>
        <% } %>
     
    <div>
       <form method="post" action="/url">
        <label for="">Enter Your Original Url</label>
        <input type="text" name="url" placeholder="https://localhost:801">
        <button type="submit">generat</button>
       </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. no</th>
                    <th>ShortId</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %> <!-- Pass index as the second argument -->
                        <tr>
                            <td><%= index + 1 %></td> <!-- Now 'index' is available -->
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        
    </div>
    
</body>
</html>